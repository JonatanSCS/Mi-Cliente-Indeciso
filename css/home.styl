h1
	text-align center

					
				
				
.cuentas
	text-align center
	padding 15px
	.usuario
		background whitesmoke
		margin-top 30px
		box-shadow 1px 1px 10px gray
		usuario-template
			.user-imagen-fondo
				background-size 120% 170%
				width 100%
				text-align center
				box-shadow 1px 1px  1px gray
				.user-avatar
					height 80px
					border-radius 50%
					margin-top 20px
				.username
					margin-top 20px
					display block
					font-size 25px
					color whitesmoke
				.user-biography
					font-size 15px
					color white
					text-shadow 1px 1px black
			.user-informacion-usuario
				
				span
					display block
					font-size 15px
					text-align left
			.tweets-usuario
				background white
				width 100%
				text-align left
				margin-top 30px
				ol
					padding-left 10px
					list-style none
					li
						margin-top 10px
						height 80px
						.user-fecha-tweet
							font-size 10px
							color lightgray
							display block
.usuario_informacion
	input
		display block
		outline none
	input[type="text"]
		padding 10px
		border solid 1px #CEF6F5
		transition box-shadow 0.3s, border 0.3s

.usuario_tweet
	input
		display block
		outline none
	input[type="text"]
		padding 10px
		border solid 1px #CEF6F5
		transition box-shadow 0.3s, border 0.3s
	.tweet
		width 100%
		height 100px

.tweets-pablo
	background whitesmoke
	margin-top 30px
	box-shadow 1px 1px 10px gray
	usuario-template
	margin-bottom 20px
	padding-bottom 50px
	tweet-template
		height 100px
		margin-top 15px
		display block
		box-shadow 1px 1px 10px gray
		background whitesmoke
		padding 10px
		span
			display block
		.user-fecha-tweet
			font-size 12px
			color lightgray
			display block

.separacion
	background lightgray
	height 5px
	margin 20px

.submit
	border 0
	background ghostwhite
	padding 10px 25px
	margin-top 20px
					