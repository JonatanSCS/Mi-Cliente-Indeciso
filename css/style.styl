body
	x-overflow hidden

.cuentas
	text-align center
	padding 15px
	.usuario
		background whitesmoke
		margin-top 30px
		box-shadow 1px 1px 10px gray
		.imagenes
			background-size 120% 170%
			width 100%
			text-align center
			box-shadow 1px 1px  1px gray
			.img-picture
				height 80px
				border-radius 50%
				margin-top 20px
			.username
				margin-top 20px
				display block
				font-size 25px
				color whitesmoke
			.biography
				font-size 15px
				color white
				text-shadow 1px 1px black
		.informacion
			
			span
				display block
				font-size 15px
				text-align left
		.tweets
			background white
			width 100%
			text-align left
			margin-top 30px
			ol
				padding-left 10px
				list-style none
				li
					margin-top 10px
					.fecha
						font-size 10px
						color lightgray
						display block

				