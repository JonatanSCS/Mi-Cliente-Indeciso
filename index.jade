doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
		script(src="bower_components/webcomponentsjs/webcomponents-lite.min.js")
		link(href='https://fonts.googleapis.com/css?family=Oswald:300',rel='stylesheet',type='text/css')
		link(rel="stylesheet", href="css/style.css")
		link(rel="stylesheet", href="css/bootstrap.css")
		link(rel="stylesheet", href="css/sweetalert.css")
		link(rel="import", href="polymer-elements/usuario.html")
		link(rel="import", href="polymer-elements/tweet-pablo.html")



	body
		div(class="content-fluid")
			h1 
			div(class="cuentas")
				//usuario-template
			div(class="usuario_informacion col-xs-12")
				div(class="separacion")
				p(class="p-info") 
				span Nombre de Usuario:
				input(type="text", placeholder="", class="input-username")
				span Nombre:
				input(type="text", placeholder="", class="input-first")
				span Apellido:
				input(type="text", placeholder="", class="input-last")
				span Email:
				input(type="text", placeholder="", class="input-email")
				input(type="submit", class="submit submit-information", value="Enviar")

			div(class="usuario_tweet col-xs-12")
				div(class="separacion")
				p(class="p-nombre") 
				input(type="text", placeholder="Tweet", class="text-tweet tweet", maxlength="140")
				input(type="submit", class="submit submit-tweet")
			div(class="tweets-pablo col-xs-12")





		script(src="scripts/jquery.js")
		script(src="scripts/bootstrap.js")
		script(src="scripts/sweetalert.js")
		script(src="scripts/main.js")
		


		